<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/st_hand_cardview"
    android:layout_width="match_parent"
    android:layout_height="100sp"

    android:layout_margin="@dimen/tenDp"
    app:cardBackgroundColor="@android:color/transparent"
    app:cardCornerRadius="@dimen/threeDp"
    app:contentPadding="@dimen/fiveDp">

    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:paddingLeft="@dimen/fiveDp"
        android:layout_marginTop="@dimen/threeDp"
        android:orientation="vertical">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:id="@+id/artist_pic"
            android:src="@mipmap/ic_launcher"

            app:civ_border_width="0dp"
            app:civ_shadow="true"
            app:civ_shadow_radius="10"
            app:civ_shadow_color="#8BC34A"/>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_toRightOf="@+id/artist_pic"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tenDp"
            android:layout_marginLeft="@dimen/twentyfiveDp"
            android:text="Track Name"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/track_name"

            android:textSize="@dimen/fifteenDp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/tenDp"
            android:layout_marginLeft="@dimen/twentyfiveDp"
            android:text="Michael jackson"

            android:textColor="@color/black"
            android:id="@+id/artist_name"
            android:layout_below="@+id/track_name"

            android:textSize="@dimen/twelveDp"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="@dimen/thirtyfiveDp"
            android:layout_height="@dimen/thirtyfiveDp"
            android:id="@+id/play_stop"
            android:background="@drawable/play_button"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/tenDp"
            android:layout_marginRight="@dimen/tenDp"

            >

        </ImageView>






    </RelativeLayout>
</android.support.v7.widget.CardView>
