<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingTop="@dimen/twentySp"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="@dimen/hundredDp"
                android:layout_height="@dimen/hundredDp"
                android:id="@+id/artist_pic"
                android:background="@mipmap/ic_launcher"
                android:layout_centerHorizontal="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:text="MJ"
                android:textColor="@color/black"
                android:id="@id/artist_name"
                android:layout_below="@+id/artist_pic"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/artist_name"
                android:layout_marginTop="@dimen/thirtyfiveDp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:id="@+id/track_linear"
                    android:paddingLeft="@dimen/thirtyDp"
                    android:paddingRight="@dimen/thirtyDp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"

                        android:textSize="@dimen/eighteenDp"
                        android:text="Track "/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:id="@+id/trackName"
                        android:layout_alignParentRight="true"

                        android:layout_weight="1.2"
                        android:textSize="@dimen/eighteenDp"
                        android:text="Track "/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:id="@+id/genre_linear"
                    android:layout_below="@+id/track_linear"
                    android:layout_marginTop="@dimen/twentySp"
                    android:paddingLeft="@dimen/thirtyDp"
                    android:paddingRight="@dimen/thirtyDp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"

                        android:textSize="@dimen/eighteenDp"
                        android:text="Genre "/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:id="@+id/genrename"

                      android:layout_alignParentRight="true"
                        android:textSize="@dimen/eighteenDp"
                        android:text="Track "/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_below="@+id/genre_linear"
                    android:layout_marginTop="@dimen/twentySp"
                    android:id="@+id/price_linear"

                    android:paddingLeft="@dimen/thirtyDp"
                    android:paddingRight="@dimen/thirtyDp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"

                        android:textSize="@dimen/eighteenDp"
                        android:text="Price "/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:id="@+id/price"

                     android:layout_alignParentRight="true"
                        android:textSize="@dimen/eighteenDp"
                        android:text="Track "/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"

                    android:paddingLeft="@dimen/thirtyDp"
                    android:layout_marginTop="@dimen/twentySp"
                    android:paddingRight="@dimen/thirtyDp"
                    android:layout_below="@+id/price_linear"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"

                        android:textSize="@dimen/eighteenDp"
                        android:text="Release Date "/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_alignParentRight="true"
                        android:textColor="@color/black"
                        android:id="@+id/date"


                        android:textSize="@dimen/eighteenDp"
                        android:text="Track "/>

                </RelativeLayout>

            </RelativeLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>